{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"types": ["bun-types"],
		"jsx": "react",
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "examples", "test"]
}
